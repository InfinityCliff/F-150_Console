# Side Menu ------------------------------------------------------------------
<MusicScreenSideMenu@BoxLayout>:
    id: music_side_menu
    orientation: 'vertical'
    Button:
        text: 'iPod'
        on_press:
            popup = [w for w in self.walk_reverse()][-1]
            popup.active_manager.current = 'ipod'
            popup.dismiss()
    Button:
        text: 'Radio'
        on_press:
            popup = [w for w in self.walk_reverse()][-1]
            popup.active_manager.current = 'radio'
            popup.dismiss()
    Button:
        text: 'AUX'
        on_press:
            popup = [w for w in self.walk_reverse()][-1]
            popup.active_manager.current = 'aux'
            popup.dismiss()
    Button:
        text: 'Shuffle'
        on_press:
    Button:
        text: 'Double Shuffle'
        on_press:
    Button:
        text: 'Album Shuffle'
        on_press:
    Button:
        text: 'Play Album'
        on_press:

# ^Side Menu ----------------------------------------------------------------^
<SelectionLabel@Label>:
    text_size: (self.width - 20), self.height
    halign: 'left'
    valign: 'center'
    font_size: 20
    #font_name: 'arial'

<SongSelectionViewClass>:
    Button:
        canvas:
            Color:
                rgba: [0,0,1,.5]
            Rectangle:
                size: self.size
                pos: self.pos
        on_release: root.play_song(root.song, root.artist, root.album)
        BoxLayout
            size_hint: None, None
            pos: self.parent.pos
            size: self.parent.size
            SelectionLabel:
                text: root.song
            SelectionLabel:
                text: root.artist

<ArtistSelectionViewClass>:
    Button:
        canvas:
            Color:
                rgba: [0,0,1,.5]
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout
            size_hint: None, None
            pos: self.parent.pos
            size: self.parent.size
            SelectionLabel:
                text: root.artist

<AlbumSelectionViewClass>:
    Button:
        canvas:
            Color:
                rgba: [0,0,1,.5]
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout
            size_hint: None, None
            pos: self.parent.pos
            size: self.parent.size
            SelectionLabel:
                text: root.album
            SelectionLabel:
                text: root.artist

<PlayListSelectionViewClass>:
    Button:
        canvas:
            Color:
                rgba: [0,0,1,.5]
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout
            size_hint: None, None
            pos: self.parent.pos
            size: self.parent.size
            Label:
                text: root.playlist

<SearchBar>:
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: None
        height: 30
        a:
            root.add_AlphaButtons(self)
        Button:
            text: 'S'
    SelectionView:
        id: rv
        viewclass: 'SongSelectionViewClass'

        RecycleBoxLayout:
            orientation: 'vertical'
            default_size: None, 40
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height


<IpodSelectionScreen>:
    size_hint_y1: 0.7
    FloatLayout:
        size_hint: None, None
        size: 800, 480
        pos: 0,0

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.2, root.size_hint_y1
            x: 40
            y: (480 / 2) - (self.height / 2)
            ToggleButton:
                group: 'ipodlistelector'
                text: 'Song'
                on_press:
                    root.extract_songs()
                    root.ids.search_bar.ids.rv.viewclass = 'SongSelectionViewClass'
            ToggleButton:
                group: 'ipodlistelector'
                text: 'Artist'
                on_press:
                    root.extract_artists()
                    root.ids.search_bar.ids.rv.viewclass = 'ArtistSelectionViewClass'
            ToggleButton:
                group: 'ipodlistelector'
                text: 'Album'
                on_press:
                    root.extract_albums()
                    root.ids.search_bar.ids.rv.viewclass = 'AlbumSelectionViewClass'
            ToggleButton:
                group: 'ipodlistelector'
                text: 'Playlist'
                on_press:
                    root.extract_playlists()
                    root.ids.search_bar.ids.rv.viewclass = 'PlayListSelectionViewClass'
        SearchBar:
            id: search_bar
            size_hint: None, None
            height: 325
            width: 525
            x: 250
            y: 80

<SongProgress@BoxLayout>
    Label:
        text: '0:00'
        size_hint_x: 0.10
    ProgressBar:
    Label:
        text: '0:00'
        size_hint_x: 0.10

<PlayerContols@BoxLayout>
    button_size: 30
    height: self.button_size
    width: self.button_size * 3
    Button:
        text: '<'
    Button:
        text: '||'
    Button:
        text: '>'

<PlayerModes@BoxLayout>
    Button:
        text: 'Play Album'
        on_press: root.parent.parent.PlayAlbum()
    Button:
        text: 'Shuffle'
        on_press: root.parent.parent.ShuffleSongs()
    Button:
        text: 'Double Shuffle'
        on_press: root.parent.parent.DoubleShuffle()
    Button:
        text: 'Album Shuffle'
        on_press: root.parent.parent.AlbumShuffle()

<IpodScreen>:
    album_cover: ''
    play_mode: 'Shuffle Song'
    FloatLayout:
        size_hint: None, None
        size: 800, 480
        pos: 0,0
        BoxLayout:
            id: song_info
            orientation: 'vertical'
            size_hint: None, None
            x: 90
            height: 200
            width: 400
            center_y: 305
            canvas:
                Color:
                    rgba: [0,0,1,.5]
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                text: 'Song Title'
            Label:
                text: 'Album Name'
            Label:
                text: 'Artist'
        Image:
            id: album_cover_img
            source: root.album_cover
            size_hint: None, None
            height: song_info.height
            width: self.height
            x: 500
            center_y: song_info.center_y
            allow_stretch: False
        Label:
            id: play_mode_lbl
            text: root.play_mode
            size_hint: None, None
            size: album_cover_img.width, 20
            x: album_cover_img.x
            y: album_cover_img.y - self.height
        SongProgress:
            id: song_progress
            size_hint: None, None
            height: 15
            width: album_cover_img.right - song_info.x
            x: song_info.x
            y: song_info.y - self.height - 10
        PlayerContols:
            id: player_control
            button_size: 40
            size_hint: None, None
            center_x: 400
            y: song_progress.y - self.height - 10
        PlayerModes:
            size_hint: None, None
            width: album_cover_img.right - song_info.x
            height: 40
            x: song_info.x
            y: player_control.y - self.height - 10
        Button:
            x: 10
            y: 10
            size_hint: None, None
            size: 30, 30
            text: 'list'
            on_press:
                root.parent.current = 'ipod_selection'
                root.parent.current_screen.extract_songs()

<RadioScreen@Screen>:

<AuxScreen@Screen>:


