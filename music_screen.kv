# === Base Screen ==================================
<MusicScreen>:
    id: music
    image_source: 'rsc/screens/Music.png'
    FloatLayout:
        HOMEButton:
            on_release: root.manager.current = 'home'
        SETButton:
# === Base Screen ==================================
# ^Music Screen -------------------------------------------------------------^


# Music Screen Manager -------------------------------------------------------
<MusicManager>:
    id: music_manager
    transition: NoTransition()

    ipod_screen: ipod
    radio_screen: radio
    aux_screen: aux
    ipod_selection_screen: ipod_selection

    on_current: app.root.active_screen = self.current

    IpodScreen:
        id: ipod
        name: 'ipod'
        manager: music_manager

    RadioScreen:
        id: radio
        name: 'radio'
        manager: music_manager

    AuxScreen:
        id: aux
        name: 'aux'
        manager: music_manager

    IpodSelectionScreen:
        id: ipod_selection
        name: 'ipod_selection'
        manager: music_manager

# ^Music Screen Manager -----------------------------------------------------^
