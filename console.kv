#: import SideMenu side_menu
#: import NoTransition kivy.uix.screenmanager.NoTransition


ConsoleRoot:

<ConsoleRoot>:


<MMButton@Button>
    size_hint_x: None
    size_hint_y: None
    size: 280, 46
    #text_size: 280,46
    valign: 'center'
    background_color: [0, 0, 0, 0]

<ConsoleScreen>:
    canvas.before:
        Rectangle:
            source: self.image_source
            size: self.size
            pos: self.pos

# Home Screen  ---------------------------------------------------------------
<HomeScreen>:
    image_source: 'rsc/screens/Main.png'
    size: 800, 480
    FloatLayout:
        size: 800, 480
        MMButton:
            pos: 0, 423
            text: '  Phone'
            on_release: app.root.sm.current = 'phone'
            halign: 'left'
        MMButton:
            pos: 520,423
            text: 'Navigation  '
            on_release: pass #app.root.sm.current = 'nav'
            halign: 'right'
        MMButton:
            pos: 0, 9
            text: '  Music'
            on_release: app.root.sm.current = 'music'
            halign: 'left'
        MMButton:
            pos: 520, 9
            text: 'Climate  '
            on_release: app.root.sm.current = 'climate'
            halign: 'right'

<HomeScreenSideMenu@BoxLayout>:
    orientation: 'vertical'
    Button:
        text: 'test'
        on_press:
            popup = [w for w in self.walk_reverse()][-1]
            print(popup)
    Button:
        text: 'test'

<HOMEButton@Button>:
    size_hint_x: None
    size_hint_y: None
    size: 40, 40
    pos: 350,10
    background_color: [1,1,1,0]
    Image:
        source: 'rsc/buttons/home.png'
        size: 40,40
        pos: 350,10

<SETButton@Button>
    size_hint_x: None
    size_hint_y: None
    size: 40, 40
    pos: 410,10
    background_color: [1,1,1,0]
    Image:
        source: 'rsc/buttons/settings.png'
        size: 40,40
        pos: 410,10
# ^Home Screen  -------------------------------------------------------------^


# Primary Screen Manager  ----------------------------------------------------
<Manager>:
    id: screen_manager
    transition: NoTransition()

    home_screen: home
    music_screen: music
    phone_screen: phone
    climate_screen: climate

    on_current: app.root.active_screen = self.current

    HomeScreen:
        id: home
        name: 'home'
        manager: screen_manager

    MusicScreen:
        id: music
        name: 'music'
        manager: screen_manager

    PhoneScreen:
        id: phone
        name: 'phone'
        manager: screen_manager

    ClimateScreen:
        id: climate
        name: 'climate'
        manager: screen_manager
# ^Primary Screen Manager  --------------------------------------------------^
