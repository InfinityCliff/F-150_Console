# QuitPane ------------------------------------------------------------------
<QuitPane@ModalView>:
    id: quit_pane
    FloatLayout:
        pos_hint: None, None
        pos: 10, 10
        size_hint: None, None
        size: 335, 335
        canvas.after:
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'rsc/logo/InfinityCliffLogoClear-Red.png'
        BoxLayout:
            id: popup
            size_hint: None, None
            size: 290, 60
            #pos_hint: None, None
            pos: 10, 370
            orientation: 'vertical'
            Button:
                id: quit_button
                on_release: quit()
                size_hint: None, None
                size: 290, 30
                background_normal: 'rsc/buttons/quit_car_pc.png'
            Button:
                text: 'CAN-BUS Console'
                size_hint: None, None
                size: 290, 30
            Button:
                id: cancel
                on_release: root.dismiss()
                size_hint: None, None
                size: 80, 30
                pos_hint: {'center_x': 0.5, 'y': 1}
                background_normal: 'rsc/buttons/cancel.png'
# ^QuitPane -----------------------------------------------------------------^


# NormalPane -----------------------------------------------------------------
<NormalPane@FloatLayout>:
# ^NormalPane ---------------------------------------------------------------^


# Front Glass ----------------------------------------------------------------
<FrontGlass>:
    front_glass: front_glass
    id: front_glass
    NormalPane:
        normal_pane: normal_pane
        id: normal_pane
# ^Front Glass  -------------------------------------------------------------^
